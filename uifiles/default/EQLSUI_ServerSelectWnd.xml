<!-- Server list -->
	<Listbox item = "SERVERSELECT_ServerList">
		<ScreenID>ServerList</ScreenID>
		<Font>4</Font>
		<DrawTemplate>WDT_EQLS_Def_Bordered</DrawTemplate>
		<RelativePosition>true</RelativePosition>
	<TooltipReference>List of available servers.</TooltipReference>
		<AutoStretch>true</AutoStretch>
		<LeftAnchorOffset>40</LeftAnchorOffset>
		<TopAnchorOffset>70</TopAnchorOffset>
		<RightAnchorOffset>40</RightAnchorOffset>
    <BottomAnchorOffset>195</BottomAnchorOffset>
		<TopAnchorToTop>true</TopAnchorToTop>
		<BottomAnchorToTop>false</BottomAnchorToTop>
		<LeftAnchorToLeft>true</LeftAnchorToLeft>
		<RightAnchorToLeft>false</RightAnchorToLeft>
		<Style_Border>true</Style_Border>
		<Style_Transparent>false</Style_Transparent>
		<Style_VScroll>true</Style_VScroll>
		<Columns>
      <Width>200</Width>
      <Heading>Server</Heading>
		</Columns>
		<Columns>
			<Width>100</Width>
      <Heading>Status</Heading>
  	  <Tooltip>Status and population of the server.</Tooltip>
    </Columns>
    <Columns>
      <Width>190</Width>
      <Heading>Ruleset</Heading>
	  <Tooltip>Description of the game rules that are active on the server.</Tooltip>
    </Columns>
    <Columns>
      <Width>200</Width>
      <Heading>Expansion</Heading>
	  <Tooltip>Latest expansion unlocked on the server.</Tooltip>
    </Columns>
	<Columns>
	  <Width>100</Width>
	  <Heading>True Box</Heading>
	  <Tooltip>Whether the server limits the amount of characters that can log in per PC. Relaxed True Box servers allow the number in parentheses per PC.</Tooltip>
	</Columns>
    <Columns>
      <Width>100</Width>
      <Heading>All Access</Heading>
	  <Tooltip>Whether the server requires an All Access Membership to log in.</Tooltip>
		</Columns>
	</Listbox>

